{% extends 'base.html.twig' %}


{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}


    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <h1>Hello {{ app.user.firstname }}</h1>
        {% else %}
            <h3>
                Welcome to youflix here you can do a playliste of what you love in youtube an more soon
            </h3>
        {% endif %}

        <div class="row">
        {% for clip in videos %}
            <div class="col-sm">

            {% set clip_link = clip.content  %}

            <iframe width="200" height="115" src="{{ clip_link  | replace({ 'watch?v=': 'embed/'}) }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                <div class="media-body">
                    <h5 class="mt-0">{{ clip.title }}</h5>
                    <p>{{ clip.comment }}</p>
                </div>
            <a href="{{ path('user_firstname', {'byFirstname':clip.user.firstname})}}">{{ clip.user.firstname }}</a>


            </div>
        {% endfor %}
        </div>






    </div>
{% endblock %}
